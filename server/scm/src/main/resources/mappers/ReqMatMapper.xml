<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- src/main/resources/mappers/ReqMatMapper.xml -->
<mapper namespace="com.yedam.scm.outboundMat.mapper.ReqMatMapper">

  <select id="selectReqMatByPlDetId" parameterType="long"
          resultType="com.yedam.scm.vo.ReqMatVO">
    SELECT
      REQ_ID      AS reqId,
      MAT_ID      AS matId,
      PL_DET_ID   AS plDetId,
      REQ_WEIGHT  AS reqWeight
    FROM REQ_MAT
    WHERE PL_DET_ID = #{plDetId}
    ORDER BY REQ_ID
  </select>

</mapper>
