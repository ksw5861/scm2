<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.scm.common.CommonMapper">
<!-- 자재 resultMap -->
<resultMap id="MaterialMap" type="MaterialVO">
    <id     property="matId"        column="MAT_ID"/>
    <result property="matName"      column="MAT_NAME"/>
    <result property="matType"      column="MAT_TYPE"/>
    <result property="matStoreCond" column="MAT_STORE_COND"/>
    <result property="matUnitConv"  column="MAT_UNIT_CONV"/>
    <result property="matUnitPrice" column="MAT_UNIT_PRICE"/>
    <result property="leadTime"     column="LEAD_TIME"/>
    <result property="safeStock"    column="SAFE_STOCK"/>
    <result property="status"       column="STATUS"/>
    <result property="spec"         column="SPEC"/>
    <result property="unit"         column="UNIT"/>
    <result property="stockUnit"    column="STOCK_UNIT"/>
</resultMap>

<!-- PurStatusLog 매핑 -->
<resultMap id="PurStatusLogMap" type="PurStatusLogVO">
    <id     property="purStatusId"   column="PUR_STATUS_ID"/>
    <result property="reDate"        column="RE_DATE"/>
    <result property="logName"          column="LOG_NAME"/>
    <result property="logPurMatStatus"  column="LOG_PUR_MAT_STATUS"/>
    <result property="logPurId"         column="LOG_PUR_ID"/>
    <result property="logSupOutQty"         column="LOG_SUP_OUT_QTY"/>
    <result property="logVendorId"     column="LOG_VENDOR_ID"/>
    <result property="logExpectDate"     column="LOG_EXPECT_DATE"/>
    <result property="logShipOrderNo"     column="LOG_SHIP_ORDER_NO"/>
    <result property="finalShipCon"     column="FINAL_SHIP_CON"/>
</resultMap>

<!--거래처 resultMap -->
<resultMap id="VendorMap" type="VendorVO">
    <result property="vendorId" column="VENDOR_ID"/>
    <result property="businessRegistration" column="BUSINESS_REGISTRATION"/>
    <result property="companyName" column="COMPANY_NAME"/>
    <result property="ceoName" column="CEO_NAME"/>
    <result property="phoneNumber" column="PHONE_NUMBER"/>
    <result property="address" column="ADDRESS"/>
    <result property="isActive" column="IS_ACTIVE"/>
    <result property="createdAt" column="CREATED_AT"/>
    <result property="updatedAt" column="UPDATED_AT"/>
</resultMap>

<!--제품 resultMap-->
<resultMap id="ProductMap" type="ProductVO">
  <id property="prodId" column="prod_id"/>
  <result property="prodName" column="prod_name"/>
  <result property="prodExpireDate" column="exp"/>
  <result property="safeStock" column="safe_stock"/>
  <result property="spec" column="spec"/>
  <result property="prodUnitPrice" column="prod_unit_price"/>
  <result property="unit" column="unit"/>
  <result property="status" column="status"/>
</resultMap>

<!--입고로그 resultMap-->
<resultMap id="InboundLogMap" type="InboundLogVO">
    <id     property="inLogId"       column="IN_LOG_ID"/>
    <result property="inboundDetId"  column="INBOUND_DET_ID"/>
    <result property="logInQty"      column="LOG_IN_QTY"/>
    <result property="logMatStatus"  column="LOG_MAT_STATUS"/>
    <result property="reDate"        column="RE_DATE"/>
    <result property="logName"       column="LOG_NAME"/>
    <result property="logInspectDate" column="LOG_INSPECT_DATE"/>
    <result property="logResult"     column="LOG_RESULT"/>
    <result property="logImg"        column="LOG_IMG"/>
</resultMap>

<!--배송정보 resultMap-->
<resultMap id="ShipmentInfoMap" type="ShipmentInfoVO">
    <id     property="shipId"       column="SHIP_ID"/>
    <result property="inboundId"    column="INBOUND_ID"/>
    <result property="carrierName"  column="CARRIER_NAME"/>
    <result property="driverName"   column="DRIVER_NAME"/>
    <result property="driverPhone"  column="DRIVER_PHONE"/>
    <result property="vehicleNo"    column="VEHICLE_NO"/>
    <result property="shipFrom"     column="SHIP_FROM"/>
    <result property="shipTo"       column="SHIP_TO"/>
    <result property="trackingNo"   column="TRACKING_NO"/>
</resultMap>

<!--입고이력 resultMap-->
<resultMap id="InboundLogResultMap" type="InboundLogVO">
    <id property="inLogId" column="IN_LOG_ID" />
    <result property="inboundDetId" column="INBOUND_DET_ID" />
    <result property="logInQty" column="LOG_IN_QTY" />
    <result property="logMatStatus" column="LOG_MAT_STATUS" />
    <result property="reDate" column="RE_DATE" />
    <result property="logName" column="LOG_NAME" />
    <result property="logInspectDate" column="LOG_INSPECT_DATE" />
    <result property="logResult" column="LOG_RESULT" />
    <result property="logImg" column="LOG_IMG" />
</resultMap>

<!--창고resultMap-->
<resultMap id="wareHouseResultMap" type="WareHouseVO">
    <result property="whId"       column="WH_ID" />
    <result property="whName"     column="WH_NAME" />
    <result property="whAddress"  column="WH_ADDRESS" />
    <result property="whOwner"    column="WH_OWNER" />
    <result property="ownerTel"   column="OWNER_TEL" />
    <result property="status"     column="STATUS" />
</resultMap>

</mapper>